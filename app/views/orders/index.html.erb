<h1>orders</h1>

<table>
    <thead>
        <tr>
            <th><%= Order.human_attribute_name(:created_at) %></th>
            <th><%= Order.human_attribute_name(:user) %></th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%= order.created_at.strftime("%y年%m月%d日 %H:%M") %></td>
                <td><%= order.user&.email %></td>
                <td> <%= link_to t('.show'), order %></td>
            </tr>
        <% end %>
    </tbody>
</table>